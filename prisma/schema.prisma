generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ai_explanations {
  explanationId    Int      @id @default(autoincrement())
  createdAt        DateTime @default(now()) @db.Timestamp(0)
  questionId       Int
  explanationText  String   @db.Text
  modelUsed        String   @db.Text
  explanationIndex Int
}

model answer_history {
  answerId   Int      @id @default(autoincrement())
  createdAt  DateTime @default(now()) @db.Timestamp(0)
  userId     Int
  questionId Int
  status     Boolean  @default(true)
}

model questions {
  questionId            Int      @id @default(autoincrement())
  createdAt             DateTime @default(now()) @db.Timestamp(0)
  examSource            String   @db.Text
  questionNumber        Int
  questionImageFileName String   @db.Text
  correctAnswer         Int
}

model users {
  userId    Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @db.Timestamp(0)
  uid       String   @db.VarChar(36)
}
